<Window
    x:Class="MARGO.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MARGO.Controls"
    xmlns:common="clr-namespace:MARGO.Common"
    xmlns:vms="clr-namespace:MARGO.ViewModels">

    <Window.DataContext>
        <vms:ViewModel />
    </Window.DataContext>

    <Window.Resources>
        <common:BooleanNOTConverter x:Key="BooleanNOTConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <controls:ControlPanel Grid.Column="0" IsEnabled="{Binding IsBusy, Converter={StaticResource BooleanNOTConverter}}" />

        <TabControl Grid.Column="1">
            <TabItem Header="Map">
                <controls:MapView />
            </TabItem>
            <TabItem Header="Stats">
                <controls:StatisticsView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
