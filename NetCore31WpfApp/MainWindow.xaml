<Window x:Class="NetCore31WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:zoomAndPan="clr-namespace:ZoomAndPan;assembly=ZoomAndPanNetCore"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <zoomAndPan:ZoomAndPanControl Name="ZoomAndPanControl"
                                          Background="Black"
                                          MinimumZoomType="FitScreen"
                                          UseAnimations="False"
                                          ZoomAndPanInitialPosition="FillScreen">
            <Image Grid.Row="0" Name="Image" Source="{Binding UserImage}" />
        </zoomAndPan:ZoomAndPanControl>
        

        <Button Grid.Row="1" Content="Nyomj meg!" Click="Button_Click" />

    </Grid>
</Window>
